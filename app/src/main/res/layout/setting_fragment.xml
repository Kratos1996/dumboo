<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/name_lay"
            android:gravity="center"
            android:layout_height="@dimen/_50sdp">

            <TextView
                style="@style/Linear_simple_txt_style"
                android:text=""
                android:gravity="center"
                android:layout_weight="1"
                android:id="@+id/name"
                />
            <EditText
                style="@style/Linear_simple_txt_style"
                android:text=""
                android:visibility="gone"
                android:gravity="center"
                android:layout_weight="1"
                android:id="@+id/nameEdit"
                />



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/profile"
            android:layout_height="@dimen/_50sdp">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/profile"
                android:padding="@dimen/_7sdp"
                android:layout_weight=".1"/>
            <TextView
                style="@style/Linear_simple_txt_style"
                android:text="@string/profile"
                android:layout_weight=".8"
                />

            <ImageView

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/right_arrow"
                android:layout_weight=".1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/mobile_lay"
            android:layout_height="@dimen/_50sdp">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/mob_ico"
                android:padding="@dimen/_10sdp"
                android:layout_weight=".1"/>
            <TextView
                style="@style/Linear_simple_txt_style"
                android:text="@string/number"
                android:layout_weight=".4"
                />
            <TextView
                style="@style/simpletextViewStyle_wrapcontent"
                android:text=""
                android:id="@+id/mobileNumber"
                android:layout_width="0dp"
                android:layout_weight=".4"
                />
            <ImageView
                android:id="@+id/editEmail"
                android:layout_width="0dp"
                android:visibility="invisible"
                android:layout_height="match_parent"
                android:src="@drawable/right_arrow"
                android:padding="@dimen/_5sdp"
                android:layout_weight=".1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/changePass_lay"
            android:layout_height="@dimen/_50sdp">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/speech"
                android:padding="@dimen/_7sdp"
                android:layout_weight=".1"/>
            <TextView
                style="@style/Linear_simple_txt_style"
                android:text="Caller Name Announcer"
                android:layout_weight=".6"
                />
            <ImageView
                android:id="@+id/isAnouncer"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/check_not_select"
                android:layout_weight=".1"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/meetDeveloper"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/dev"
                android:padding="@dimen/_7sdp"
                android:layout_weight=".1"/>
            <TextView
                style="@style/Linear_simple_txt_style"
                android:text="Connect with Developer"
                android:layout_weight=".6"
                />


        </LinearLayout>

    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>
</layout>